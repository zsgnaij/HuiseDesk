{
  "name": "monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node start.js",
    "init:env": "yarn install:electron && yarn install:llm-server && yarn install:sg-scripts",
    "install:electron": "cd packages/electron-app && yarn",
    "install:llm-server": "cd packages/llm-server && yarn",
    "install:sg-scripts": "cd packages/sg-scripts && python -m poetry install --no-root"
  }
}